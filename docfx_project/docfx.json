{
  "metadata": [
    {
      "src": [
        {
          "files": ["src/**.cs"],  // Specify the C# source files for API documentation
          "src": "../"  // Adjust the path to your source files
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["articles/**/*.md", "toc.yml", "*.md"],
        "src": ".",
        "dest": "_site/docs"
      },
      {
        "files": ["api/**.yml", "api/index.md"],
        "src": ".",
        "dest": "_site/api"
      },
      {
        "files": ["CHANGELOG.md", "LICENSE.md"],
        "src": ".",
        "dest": "_site"
      }
    ],
    "resource": [
      {
        "files": ["images/**"],
        "src": ".",
        "dest": "_site/images"
      }
    ],
    "globalMetadata": {
      "_appTitle": "Your Project Name"
    },
    "template": ["default"],
    "overwrite": ["apidoc/**.md"],
    "dest": "_site",
    "markdownEngineName": "markdig"
  }
}
